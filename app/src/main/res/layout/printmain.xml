<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d9d7d7"
        android:padding="@dimen/activity_vertical_margin">
        
        <Button
	        android:id="@+id/btn_enable"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:visibility="gone"
	        android:text="Enable bluetoth" />
        
	    <Button
	        android:id="@+id/btn_connect"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"     
	        android:text="Connect" />
	    
	    <Spinner
	        android:id="@+id/sp_device"
	        android:layout_toLeftOf="@+id/btn_connect"
	        android:layout_alignBottom="@+id/btn_connect"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"/>

	</RelativeLayout>
	
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ff8800"/>
    
    <Button
        android:id="@+id/btn_print_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_vertical_margin"          
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin" 
        android:enabled="false"
        android:text="Print test" />
    
    <Button
        android:id="@+id/btn_print_receipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_vertical_margin"   
        android:layout_marginLeft="@dimen/activity_vertical_margin" 
        android:enabled="false"
        android:text="Print receipt" />
  
     
    <TextView 
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tv" 
        android:visibility="visible"/>"
    
</LinearLayout>